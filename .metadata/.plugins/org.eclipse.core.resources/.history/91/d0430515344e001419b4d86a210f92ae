package elementary_programming;

/* Write a program that computes the tax and tip on a restaurant bill for a patron with a $44.50 meal charge */

import java.math.RoundingMode;
import java.text.DecimalFormat;
import java.text.NumberFormat;
import java.util.Scanner; // Import the scanner object

public class Restaurant_bill { // Create the new Restaurant bill class
	public static void main(String[] Args){ // Create the new main string arguments
		
		Scanner input = new Scanner(System.in);
		
		double meal, tip_rate, tax_rate, total_pre_tip, total_post_tip; // Note the end of the line of the program using //
		
		meal = 44.50; 
		tax_rate = 6.75;
		tip_rate = 15;
		
		System.out.println("Welcome to the restaurant bill program!\n");
		System.out.println("Last night, I noted that you visited a restaurant and paid $44.50!\n";);
		
		total_pre_tip = meal + (meal * (tax_rate / 100));
		total_post_tip = total_pre_tip + (total_pre_tip * (tip_rate / 100));
		
		System.out.println("Your total bill can be summarized as follows:\n");
		System.out.println("Meal cost: " + meal + "\n");
		System.out.println("Tax amount: " + (meal * (tax_rate / 100)) + "\n");
		System.out.println("Tip amount: " + (total_pre_tip * (tip_rate / 100)));
		System.out.println("Total bill: " + total_post_tip + "\n");
		System.out.println("I hope that you had an excellent meal!");
		
		cout << "Your total bill can be summarized as follows:" << endl;
		cout << "Meal cost: " << meal << endl;
		cout << "Tax amount: " << (meal * (tax_rate / 100)) << endl;
		cout << "Tip amount: " << (total_pre_tip * (tip_rate / 100)) << endl;
		cout << "Total bill: " << total_post_tip << endl;
		cout << "I hope that you had an excellent meal!";		
		return 0;
		
		
		
	}
}
